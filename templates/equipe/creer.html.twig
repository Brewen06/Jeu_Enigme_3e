{% extends 'base.html.twig' %}

{% block title %}Création d'une équipe{% endblock %}

{% block body %}

    <div class="w-full max-w-md bg-white rounded-xl shadow-lg p-8">
        <h1 class="text-3xl font-bold text-center text-blue-700 mb-8">Créer une équipe</h1>
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div>
                {{ form_row(form.nom, {'attr': {'class': 'block w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
            </div>
            <button type="submit" class="w-full mt-4 py-2 px-4 bg-gradient-to-r from-blue-500 to-red-500 text-white font-semibold rounded-lg shadow-md hover:from-blue-600 hover:to-red-600 transition-colors duration-200">
                Créer l'équipe
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
