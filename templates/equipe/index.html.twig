{% extends 'base.html.twig' %}

{% block title %}Les équipes{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #f5f5f5; padding: 2px 6px; }
    body { font-family: 'Times New Roman', Times, serif; background-color: #837d7d; margin: 0; padding: 20px; }
</style>
    <h1>Les équipes</h1>
    <ul>
        {% for equipe in equipes %}
            <li>{{ equipe.nom }} ({{ equipe.nombre }} membres)</li>
        {% else %}
            <li>Aucune équipe trouvée</li>
        {% endfor %}
{% endblock %}
