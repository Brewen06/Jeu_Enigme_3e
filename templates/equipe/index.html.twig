{% extends 'base.html.twig' %}

{% block title %}Les équipes{% endblock %}

{% block body %}
<div
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-100 via-blue-100 to-red-100 py-12 px-4">
    <div class="w-full max-w-2xl bg-white rounded-xl shadow-lg p-8">
        <h1 class="text-3xl font-bold text-center text-blue-700 mb-8">Les équipes</h1>
        <ul class="space-y-4">
            {% for equipe in equipes %}
            <li class="flex items-center justify-between px-6 py-4 bg-blue-50 rounded-lg shadow-sm">
                <span class="font-semibold text-blue-800">{{ equipe.nom }}</span>
                <span class="text-gray-600">{{ equipe.nombre }} membres</span>
            </li>
            {% else %}
            <li class="text-center text-gray-500">Aucune équipe trouvée</li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}