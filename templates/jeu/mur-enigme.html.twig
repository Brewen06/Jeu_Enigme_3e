{% extends 'base.html.twig' %}

{% block title %}Mur des enigmes{% endblock %}

{% block body %}

<div class="max-w-xl mx-auto mt-12 p-8 bg-white rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-blue-600 mb-4 flex items-center gap-2">
        {% if equipe_nom is null %}
        Bonjour, choisissez votre énigme !
        {% else %}
        Bonjour {{ equipe_nom }}, choisissez votre énigme !
        {% endif %}
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-blue-50 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200">
            <h2 class="text-xl font-semibold text-blue-800 mb-2">Énigme 1</h2>
            <p class="text-gray-700 mb-4">Quizz photos/IA.</p>
            <button
                class="w-full py-2 px-4 bg-gradient-to-r from-blue-500 to-red-500 text-white font-semibold rounded-lg shadow-md hover:from-blue-600 hover:to-red-600 transition-colors duration-200">
                Choisir cette énigme
            </button>
        </div>
        <div class="bg-blue-50 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200">
            <h2 class="text-xl font-semibold text-blue-800 mb-2">Énigme 2</h2>
            <p class="text-gray-700 mb-4">Recherche dans la bibliothèque numérique.</p>
            <button
                class="w-full py-2 px-4 bg-gradient-to-r from-blue-500 to-red-500 text-white font-semibold rounded-lg shadow-md hover:from-blue-600 hover:to-red-600 transition-colors duration-200">
                Choisir cette énigme
            </button>
        </div>


    </div>
    {% endblock %}